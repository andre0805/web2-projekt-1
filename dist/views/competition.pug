html
    head
        title #{competition.name}
    body
        h1 #{competition.name}
        h3 Competitors
        ul
            each competitor in competitors
                li #{competitor.name}

        h3 Matches
        ul 
            each round in matchesByRound
                li Round #{round.roundNumber} 
                    ul
                        each match in round.matches
                            li #{match.competitor1.name} vs #{match.competitor2.name} 
                                if match.scor1 != null && match.score2 != null
                                    | (#{match.score1} - #{match.score2})
                                else
                                    | (not played yet)
                                    if user.sub === competition.creatorUserId
                                        p Enter score:
                                        form(action="/matches/#{match.id}", method="post")
                                            label(for='score1')
                                            input(type='number', id='score1', name='score1', required)
                                            label(for='score2')
                                            input(type='number', id='score2', name='score2', required)
                                            button(type='submit') Submit