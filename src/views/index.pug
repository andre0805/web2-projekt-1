html
    head
        title Home
        style 
            include ../styles/index.css
        
    body
        if user
            nav 
                a(href="/logout") Logout

        h1 Competitions webpage
        
        if user
            h2 Hi, #{user.name}!
        else
            h2 Please login or signup to create a competition!
        
        ul(class='navigation-menu')
            if user
                li: a(href='/competitions') My competitions
            else
                li: a(href='/login') Login
                li: a(href='/signup') Signup
      
        if user
            section(class='competition-form')
                h3 Create a new competition
                form(action="/competitions", method="post") 
                    input(type='text', id='competitionName', placeholder='Competition name', name='competitionName', required)
                    textarea(id='competitors', placeholder='Competitors (split using \';\' or new line)', name='competitors', required)
                    input(type='text', id='scoringSystem', placeholder='Scoring system (win/draw/loss)', name='scoringSystem', required)
                    div.submit-button
                        button(type='submit') SUBMIT

        if error
            p.error-message #{error}
